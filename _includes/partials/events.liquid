{% if site.data.events %}
        {% for event in site.data.events %}
            {% if event.featured == true %}
                {% if event.url %}
                <a href="{{event.url}}" target="_blank">
                {% endif %}
                    <img src="/assets/img/static/arrow.svg"/> <strong>{{ event.name }}</strong><br>- {{ event.date }}<br>- {{ event.city }}<br>
                {% if event.url %}
                </a>
                {% endif %}
            {% endif %}
        {% endfor %}
{% endif %}