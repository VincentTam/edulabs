{% if include.new %}
  {% assign redirect = '{{site.url}}' %}
  {% assign project_title = '' %}
{% else %}
  {% capture redirect %}{{site.url}}/dw/{{page.slug}}{% endcapture %}
  {% assign editable = 'readonly' %}
  {% assign project_title = page.title %}
  {% assign project_art = page.art %}
  {% assign project_kmk = page.kmk %}
  {% assign project_fach = page.fach %}
  {% assign project_medien = page.medien %}
  {% assign project_desc = page.desc %}
  {% assign project_tipp = page.tipp %}
  {% assign project_long-fach = page.long-fach %}
  {% assign project_zielgruppe = page.zielgruppe %}
  {% assign project_lizenz = page.lizenz %}
  {% assign project_dauer = page.dauer %}
  {% assign project_vorbereitungszeit = page.vorbereitungszeit %}
  {% assign project_author-name = page.author-name %}
  {% assign project_author-email = page.author-email %}
  {% assign project_author-website = page.author-website %}
  {% assign project_tags = page.tags %}
  {% assign project_link = page.link %}

{% endif %}
<div class="row">
    <section class="section first white col-xs-24">
        <div class="content-wrap">
            <!-- <h2 class="section-headline">Projekte</h2> -->
            <!--    <p>Von der Idee zum Projekt: In den edulabs entwickeln Teams zusammen Projekte für zeitgemäße Bildung. Projektideen sammeln wir zuerst im <a href="https://hackdash.org/dashboards/edulabs">edulabs Hackdash</a>. Hat sich eine Arbeitsgruppe gefunden, wird diese sowie das Vorhaben im Folgenden aufgeführt.</p> -->
        </div>
        <div class="row content-wrap">
          <form id="edit-project-form" class="form" method="post" action="{{ site.staticman_server }}/v2/entry/{{ site.repository }}/dw2/dw">

            <!-- Materialempfehlung -->
            <fieldset>
              <label for="project-form-art"><strong>Materialempfehlung</strong> <span class="required">*</span></label>
              <select name="fields[art]" required>
                <option value="oer" {% if project_art == "oer" %}selected{% endif %}>Materialempfehlung (OER)</option>
                <option value="noer" {% if project_art == "noer" %}selected{% endif %}>Verweis auf Blogartikel (nicht nur OER)</option>
              </select>
            </fieldset>

            <!-- Aussagekräftiger Titel -->
            <fieldset>
              <label for="project-form-name"><strong>Aussagekräftiger Titel</strong> <span class="required">*</span></label>
              <input type="text" id="project-form-name" name="fields[title]" value="{{ project_titel }}" spellcheck="false" {{editable}}/>
            </fieldset>

            <!-- Short Text -->
            <fieldset>
              <label for="project-form-short-description"><strong>Kurzbeschreibung</strong><span class="required"> *</span><br><span id="project-form-short-description-left">(noch 500 Zeichen)</span></label>
              <textarea type="text" rows="6" id="project-form-short-description" name="fields[desc]" spellcheck="true">{{ project_text }}</textarea>
            </fieldset>

            <!-- Wirkung / Lernziele  -->
            <fieldset>
              <label for="project-form-lernziele"><strong>Wirkung / Lernziele</strong> <span class="required">*</span></label>
              <textarea type="text" rows="6" id="project-form-lernziele" name="fields[lernziele]" spellcheck="true">{{ project_lernziele }}</textarea>
            </fieldset>

            <!-- Persönliche Empfehlung / Tipp  -->
            <fieldset>
              <label for="project-form-tipp"><strong>Persönliche Empfehlung / Tipp</strong> <span class="required">*</span></label>
              <textarea type="text" rows="6" id="project-form-tipp" name="fields[tipp]" spellcheck="true">{{ project_tipp }}</textarea>
            </fieldset>

            <!-- Medieneinsatz -->
            <fieldset>
              <label for="project-form-medien"><strong> Medieneinsatz</strong> <span class="required">*</span></label>
                <br>
                {% for medien in site.data.digitalen_welt.medieneinsatz %}
                  <input name="fields[medien]" type="checkbox" value="medien-{{ forloop.index }}" {% if project_medien == medien %}selected{% endif %}>{{ medien.name }}
                  <br>
                {% endfor %}
            </fieldset>

            <!-- Fachbereich -->
            <fieldset>
              <label for="project-form-fach"><strong>  Fachbereich</strong> <span class="required">*</span></label>
                <br>
                {% for fach in site.data.digitalen_welt.fachergruppen %}
                  <input name="fields[fach]" type="checkbox" value="fach-{{ forloop.index }}" {% if project_fach == medien %}selected{% endif %}>{{ fach.name }}
                  <br>
                {% endfor %}
            </fieldset>

            {% assign long_fach = "Deutsch, Chemie, Englisch, Ethik, Französisch, Geschichte, Informatik, Kunst, Mathe, Musik, Philosophie, Physik, Politik, Religion, Sachkunde, SoWi, Spanisch" | split: "," %}
            <!-- Fach -->
            <fieldset>
              <label for="project-form-long-fach"><strong>  Fach</strong> <span class="required">*</span></label>
                <br>
                {% for fach in long_fach %}
                  <input name="fields[long-fach]" type="checkbox" value="long-fach-{{ forloop.index }}" {% if project_long-fach == fach %}selected{% endif %}>{{ fach }}
                  <br>
                {% endfor %}
            </fieldset>

            <!-- KMK -->
            <fieldset>
              <label for="project-form-kmk"><strong>Digitale Kompetenzen (KMK)</strong> <span class="required">*</span></label>
                <br>
                {% for theme in site.data.digitalen_welt.themes %}
                  {%  capture theme_level %}{{ forloop.index }}{% endcapture %}
                  <h4>{{ theme.name }}</h4>
                  {% for subtheme in theme.subthemes %}
                    <input name="fields[kmk]" type="checkbox" value="kmk-{{ theme_level }}-{{ forloop.index }}" {% if project_kmk == kmk %}selected{% endif %}>{{ subtheme.name }}
                    <br>
                  {% endfor %}
                {% endfor %}
            </fieldset>

            <!-- Zielgruppe -->
            <fieldset>
              <label for="project-form-zielgruppe"><strong>  Fachbereich</strong> <span class="required">*</span></label>
                <br>
                  <input name="fields[zielgruppe]" type="checkbox" value="zielgruppe-1">Kita/Vorschule
                <br>
                  <input name="fields[zielgruppe]" type="checkbox" value="zielgruppe-2">Grundstufe (1-3)
                <br>
                   <input name="fields[zielgruppe]" type="checkbox" value="zielgruppe-3">Grundstufe (4-6)
                <br>
                   <input name="fields[zielgruppe]" type="checkbox" value="zielgruppe-4">Sekundarstufe 1
                <br>
                   <input name="fields[zielgruppe]" type="checkbox" value="zielgruppe-5">Sekundarstufe 2
                <br>
            </fieldset>

            <!-- Lizenz des Materials -->
            <fieldset>
              <label for="project-form-lizenz"><strong>Lizenz des Materials</strong> <span class="required">*</span></label>
              <select name="fields[lizenz]" required>
                <option value="lizenz-1" {% if project_lizenz == "lizenz-1" %}selected{% endif %}>CC0</option>
                <option value="lizenz-2" {% if project_lizenz == "lizenz-2" %}selected{% endif %}>CC-BY</option>
                <option value="lizenz-3" {% if project_lizenz == "lizenz-3" %}selected{% endif %}>CC-BY-SA</option>
                <option value="lizenz-4" {% if project_lizenz == "lizenz-4" %}selected{% endif %}>Andere Lizenz</option>
              </select>
            </fieldset>

            <!-- Dauer -->
            <fieldset>
              <label for="project-form-dauer"><strong>dauer des Materials</strong> <span class="required">*</span></label>
              <select name="fields[dauer]" required>
                <option value="dauer-1" {% if project_dauer == "dauer-1" %}selected{% endif %}>mehrtägiges Projekt</option>
                <option value="dauer-2" {% if project_dauer == "dauer-2" %}selected{% endif %}>Unterrichtsreihe</option>
                <option value="dauer-3" {% if project_dauer == "dauer-3" %}selected{% endif %}>Doppelstunde</option>
                <option value="dauer-4" {% if project_dauer == "dauer-4" %}selected{% endif %}>45 Minuten</option>
                <option value="dauer-5" {% if project_dauer == "dauer-5" %}selected{% endif %}>Übun (bis zu 20 min)</option>
              </select>
            </fieldset>

            <!-- Vorbereitungszeit -->
            <fieldset>
              <label for="project-form-vorbereitungszeit"><strong>Vorbereitungszeit</strong> <span class="required">*</span></label>
              <select name="fields[vorbereitungszeit]" required>
                <option value="vorbereitungszeit-1" {% if project_vorbereitungszeit == "vorbereitungszeit-1" %}selected{% endif %}>keine</option>
                <option value="vorbereitungszeitca-2" {% if project_vorbereitungszeit == "vorbereitungszeit-2" %}selected{% endif %}>ca 30 Minuten</option>
                <option value="vorbereitungszeitca-3" {% if project_vorbereitungszeit == "vorbereitungszeit-3" %}selected{% endif %}>ca 60 Minuten</option>
                <option value="vorbereitungszeitca-4" {% if project_vorbereitungszeit == "vorbereitungszeit-4" %}selected{% endif %}>ca 90 Minuten</option>
                <option value="vorbereitungszeitca-5" {% if project_vorbereitungszeit == "vorbereitungszeit-5" %}selected{% endif %}>ca 4 Stunden</option>
                <option value="vorbereitungszeitca-6" {% if project_vorbereitungszeit == "vorbereitungszeit-6" %}selected{% endif %}>ca 1 Tag</option>
              </select>
            </fieldset>

            <!-- Link  -->
            <fieldset>
              <label for="project-form-link"><strong>Link</strong><br></label>
              <input type="text" id="project-form-link" name="fields[link]" value="{{ project_link }}" spellcheck="false"/>
            </fieldset>

            <!-- Tool Author -->
            <fieldset>
              <strong>Author</strong>
                    <br>{% for author in page.author-name %}
                         {% if forloop.length == 1 %}
                           {% assign author_name = author %}
                           {% assign author_email = page.author-email %}
                           {% assign author_website = page.author-website %}
                         {% else %}
                           {% assign author_name = author %}
                           {% assign author_email = page.author-email[forloop.index0] %}
                           {% assign author_website = page.author-website[forloop.index0] %}
                         {% endif %}
                        <label for="project-form-author-name"><strong>Name</strong> <span class="required">*</span></label>
                        <input type="text" id="project-form-author-name" name="fields[author-name]" value="{{ author_name }}" spellcheck="false"/>
                        <label for="project-form-author-email"><strong>Email</strong> <span class="required">*</span></label>
                        <input type="text" id="project-form-author-email" name="fields[author-email]" value="{{ author_email }}" spellcheck="false"/>
                        <label for="project-form-author-website"><strong>Site</strong> <span class="required">*</span></label>
                        <input type="text" id="project-form-author-website" name="fields[author-website]" value="{{ author_website }}" spellcheck="false"/>
                         {% endfor %}
                    {% if include.new %}
                    <div class="contacts">
                          <label for="project-form-author-name"><strong>Name</strong> <span class="required">*</span></label>
                          <input type="text" id="project-form-author-name" name="fields[author-name]" value="{{ project_author_name  }}" spellcheck="false"/>
                          <label for="project-form-author-email"><strong>Email</strong> <span class="required">*</span></label>
                          <input type="text" id="project-form-author-email" name="fields[author-email]" value="{{ project_author_email  }}" spellcheck="false"/>
                          <label for="project-form-author-website"><strong>Site</strong> <span class="required">*</span></label>
                          <input type="text" id="project-form-author-website" name="fields[author-website]" value="" spellcheck="false"/>
                      </div>
                    {% endif %}
                    <p>
                    <button type="button" class="edu-btn small black" onclick="$('#contact-template').children().clone().appendTo('.contacts')">+ Kontakt hinzufügen</button>
                    </p>
                    <br/>
            </fieldset>

            <!-- Tags -->
            <fieldset>
              <label for="project-form-tags"><strong>Tags</strong> <span class="required">*</span></label>
              <input type="text" id="project-form-tags" name="fields[tags]" value="{{ project_tags }}" spellcheck="false" {{editable}}/>
            </fieldset>

            <fieldset class="hidden" style="display:none;">
              <input type="hidden" name="options[origin]" value="{{ page.url | absolute_url }}">
              <label for="comment-form-location">Leave blank if you are a human</label>
              <input id="spam_info" type="hidden" name="fields[human]" value="false">
              <input id="redirect_url" type="hidden" name="options[redirect]" value="{{ redirect }}">
            </fieldset>

            <p class="hidden js-notice">
              <span class="js-notice-text"></span>
            </p>
            <!-- End comment form alert messaging -->
            <fieldset>
              <button type="submit" id="comment-form-submit" class="edu-btn black">Senden</button>
            </fieldset>
      </form>
      <div id="edit-project-form-submit"></div>
      <div id="project-submit-message" style="display: none">
        <h2>
            “Vielen Dank! Die Karte ist gespeichert und lässt sich nach Freigabe unter https://edulabs.de/dw/ bearbeiten” <h2>
            <p>
      </div>
      <div id="contact-template" style="display: none">
        <label for="project-form-author-name"><strong>Name</strong> <span class="required">*</span></label>
        <input type="text" id="project-form-author-name" name="fields[author-name]" value="" spellcheck="false"/>
        <label for="project-form-author-email"><strong>Email</strong> <span class="required">*</span></label>
        <input type="text" id="project-form-author-email" name="fields[author-email]" value="" spellcheck="false"/>
        <label for="project-form-author-website"><strong>Site</strong> <span class="required">*</span></label>
        <input type="text" id="project-form-author-website" name="fields[author-website]" value="" spellcheck="false"/>
      </div>
      </div>
    </section>
</div>

